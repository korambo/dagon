{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {},
    "sourceMap": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "module": "es2022",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "suppressImplicitAnyIndexErrors": true,
    "skipLibCheck": true,
    "strict": true,
    "typeRoots": ["globals.d.ts", "./node_modules/@types"],
    "types": ["node"]
  },
  "compileOnSave": true,
  "include": [
    "src/**/*",
    "globals.d.ts"
  ],
  "exclude": ["node_modules"]
}
